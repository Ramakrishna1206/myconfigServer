# Common Configuration
spring.application.name=monolithic-app

# Default profile (fallback)
spring.datasource.url=jdbc:mysql://localhost:3306/db
spring.datasource.username=root@1206
spring.datasource.password=root@1206
# DEV Profile
spring.config.activate.on-profile=dev
spring.datasource.url=jdbc:mysql://localhost:3306/db
spring.datasource.username=root@1206
spring.datasource.password=root@1206
logging.level.org.springframework=DEBUG

# QA Profile
spring.config.activate.on-profile=qa
spring.datasource.url=jdbc:mysql://localhost:3306/db
spring.datasource.username=root@1206
spring.datasource.password=root@1206
logging.level.org.springframework=INFO

# CLOUD Profile
spring.config.activate.on-profile=cloud
spring.datasource.url=jdbc:mysql://cloud-host:3306/db
